    <!-- Firebase SDK -->
    <script src="https://www.gstatic.com/firebasejs/9.22.2/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.22.2/firebase-auth-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.22.2/firebase-firestore-compat.js"></script>

    <script>
        // Firebase configuration
        const firebaseConfig = {
            apiKey: "AIzaSyBBPbXJsleDPCJ71BInKDOLfWZsUuSd21E",
            authDomain: "gps-d6b79.firebaseapp.com",
            projectId: "gps-d6b79",
            storageBucket: "gps-d6b79.firebasestorage.app",
            messagingSenderId: "626539094767",
            appId: "1:626539094767:web:b3c92fae3af36a035a311a",
            measurementId: "G-VW4Y6W803J"
        };

        // Initialize Firebase
        firebase.initializeApp(firebaseConfig);
        const auth = firebase.auth();
        const db = firebase.firestore();

        // DOM elements
        const loginPage = document.getElementById('login-page');
        const signupPage = document.getElementById('signup-page');
        const dashboardPage = document.getElementById('dashboard-page');
        const matchPopup = document.getElementById('match-popup');
        const matchPopupClose = document.getElementById('match-popup-close');
        
        // Login elements
        const loginEmail = document.getElementById('login-email');
        const loginPassword = document.getElementById('login-password');
        const loginBtn = document.getElementById('login-btn');
        const loginMessage = document.getElementById('login-message');
        const showSignup = document.getElementById('show-signup');
        
        // Signup elements
        const signupUsername = document.getElementById('signup-username');
        const signupPhoto = document.getElementById('signup-photo');
        const signupEmail = document.getElementById('signup-email');
        const signupPassword = document.getElementById('signup-password');
        const signupAge = document.getElementById('signup-age');
        const signupGender = document.getElementById('signup-gender');
        const signupInstagram = document.getElementById('signup-instagram');
        const signupBio = document.getElementById('signup-bio');
        const signupBtn = document.getElementById('signup-btn');
        const signupMessage = document.getElementById('signup-message');
        const showLogin = document.getElementById('show-login');
        
        // Dashboard elements
        const welcomeUser = document.getElementById('welcome-user');
        const userEmail = document.getElementById('user-email');
        const userAvatar = document.getElementById('user-avatar');
        const logoutBtn = document.getElementById('logout-btn');
        const latitudeElement = document.getElementById('latitude');
        const longitudeElement = document.getElementById('longitude');
        const locationMessage = document.getElementById('location-message');
        const locationLoading = document.getElementById('location-loading');
        const refreshBtn = document.getElementById('refresh-btn');
        
        // Nearby users elements
        const nearbyUsersList = document.getElementById('nearby-users-list');
        const noUsersMessage = document.getElementById('no-users-message');
        const nearbyLoading = document.getElementById('nearby-loading');
        
        // Variables
        let watchId = null;
        let currentUserLocation = null;
        let nearbyUsersInterval = null;
        let likesInterval = null;
        let currentUserLikes = new Set();
        let currentUserMatches = new Set();
        let hasShownMatchPopup = false;

        // Navigation functions
        function showPage(page) {
            loginPage.classList.remove('active');
            signupPage.classList.remove('active');
            dashboardPage.classList.remove('active');
            page.classList.add('active');
        }
        
        // Event listeners for navigation
        showSignup.addEventListener('click', (e) => {
            e.preventDefault();
            showPage(signupPage);
        });
        
        showLogin.addEventListener('click', (e) => {
            e.preventDefault();
            showPage(loginPage);
        });

        // Match popup close
        matchPopupClose.addEventListener('click', () => {
            matchPopup.classList.remove('active');
        });
        
        // Firebase Authentication State Observer
        auth.onAuthStateChanged((user) => {
            if (user) {
                // User is signed in
                showPage(dashboardPage);
                welcomeUser.textContent = Welcome, ${user.displayName || 'User'}!;
                userEmail.textContent = user.email;
                userAvatar.src = user.photoURL || 'https://via.placeholder.com/150';
                
                // Start location tracking
                initializeLocationTracking();
                
                // Start fetching nearby users
                startNearbyUsersUpdates();
                
                // Start checking for matches
                startMatchChecking();
            } else {
                // User is signed out
                showPage(loginPage);
                
                // Stop location tracking
                if (watchId !== null) {
                    navigator.geolocation.clearWatch(watchId);
                    watchId = null;
                }
                
                // Stop nearby users updates
                if (nearbyUsersInterval) {
                    clearInterval(nearbyUsersInterval);
                    nearbyUsersInterval = null;
                }
                
                // Stop match checking
                if (likesInterval) {
                    clearInterval(likesInterval);
                    likesInterval = null;
                }
            }
        });
        
        // Login functionality
        loginBtn.addEventListener('click', async () => {
            const email = loginEmail.value;
            const password = loginPassword.value;
            
            if (!email || !password) {
                showMessage(loginMessage, 'Please enter both email and password', 'error');
                return;
            }
            
            try {
                await auth.signInWithEmailAndPassword(email, password);
                showMessage(loginMessage, 'Login successful!', 'success');
            } catch (error) {
                showMessage(loginMessage, error.message, 'error');
            }
        });
        
        // Signup functionality
        signupBtn.addEventListener('click', async () => {
            const username = signupUsername.value;
            const photoURL = signupPhoto.value;
            const email = signupEmail.value;
            const password = signupPassword.value;
            const age = signupAge.value;
            const gender = signupGender.value;
            const instagram = signupInstagram.value;
            const bio = signupBio.value;
            
            // Validation
            if (!username || !email || !password || !age || !gender || !instagram || !bio) {
                showMessage(signupMessage, 'Please fill in all fields', 'error');
                return;
            }
            
            if (!instagram.startsWith('https://www.instagram.com/')) {
                showMessage(signupMessage, 'Instagram URL must start with https://www.instagram.com/', 'error');
                return;
            }
            
            try {
                // Create user in Firebase Authentication
                const userCredential = await auth.createUserWithEmailAndPassword(email, password);
                const user = userCredential.user;
                
                // Update profile with display name and photo
                await user.updateProfile({
                    displayName: username,
                    photoURL: photoURL || 'https://via.placeholder.com/150'
                });
                
                // Store user details in Firestore
                await db.collection('users').doc(user.uid).set({
                    username,
                    photoURL: photoURL || 'https://via.placeholder.com/150',
                    email,
                    age: parseInt(age),
                    gender,
                    instagram,
                    bio,
                    createdAt: firebase.firestore.FieldValue.serverTimestamp(),
                    location: null // Will be updated when we get GPS coordinates
                });
                
                showMessage(signupMessage, 'Account created successfully!', 'success');
                
                // Redirect to login after a delay
                setTimeout(() => {
                    showPage(loginPage);
                    // Clear form
                    signupUsername.value = '';
                    signupPhoto.value = '';
                    signupEmail.value = '';
                    signupPassword.value = '';
                    signupAge.value = '';
                    signupGender.value = '';
                    signupInstagram.value = '';
                    signupBio.value = '';
                    signupMessage.style.display = 'none';
                }, 1500);
                
            } catch (error) {
                showMessage(signupMessage, error.message, 'error');
            }
        });
        
        // Logout functionality
        logoutBtn.addEventListener('click', async () => {
            try {
                await auth.signOut();
            } catch (error) {
                console.error('Error signing out:', error);
            }
        });
        
        // Location tracking functionality
        function initializeLocationTracking() {
            getLocation();
            
            // Set up location refresh button
            refreshBtn.addEventListener('click', getLocation);
        }
        
        function getLocation() {
            locationLoading.style.display = 'block';
            locationMessage.style.display = 'none';
            
            if (navigator.geolocation) {
                const options = {
                    enableHighAccuracy: true,
                    timeout: 10000,
                    maximumAge: 0
                };
                
                // Get current position once
                navigator.geolocation.getCurrentPosition(
                    (position) => {
                        updateCoordinates(position);
                        
                        // If we were already watching, clear the previous watch
                        if (watchId !== null) {
                            navigator.geolocation.clearWatch(watchId);
                        }
                        
                        // Start watching for position changes
                        watchId = navigator.geolocation.watchPosition(
                            updateCoordinates,
                            handleLocationError,
                            options
                        );
                    },
                    handleLocationError,
                    options
                );
            } else {
                showMessage(locationMessage, 'Geolocation is not supported by this browser.', 'error');
                locationLoading.style.display = 'none';
            }
        }
        
        async function updateCoordinates(position) {
            const latitude = position.coords.latitude;
            const longitude = position.coords.longitude;
            
            latitudeElement.textContent = formatCoordinate(latitude);
            longitudeElement.textContent = formatCoordinate(longitude);
            
            locationMessage.style.display = 'none';
            locationLoading.style.display = 'none';
            
            // Store current location for distance calculations
            currentUserLocation = {
                latitude,
                longitude
            };
            
            // Update user's location in Firestore
            await updateUserLocation(latitude, longitude);
        }
        
        async function updateUserLocation(latitude, longitude) {
            const user = auth.currentUser;
            if (!user) return;
            
            try {
                await db.collection('users').doc(user.uid).update({
                    location: new firebase.firestore.GeoPoint(latitude, longitude),
                    lastLocationUpdate: firebase.firestore.FieldValue.serverTimestamp()
                });
            } catch (error) {
                console.error('Error updating user location:', error);
            }
        }
        
        function handleLocationError(error) {
            locationLoading.style.display = 'none';
            
            switch(error.code) {
                case error.PERMISSION_DENIED:
                    showMessage(locationMessage, 'Please allow location access to continue.', 'error');
                    break;
                case error.POSITION_UNAVAILABLE:
                    showMessage(locationMessage, 'Location information is unavailable.', 'error');
                    break;
                case error.TIMEOUT:
                    showMessage(locationMessage, 'The request to get your location timed out.', 'error');
                    break;
                default:
                    showMessage(locationMessage, 'An unknown error occurred.', 'error');
                    break;
            }
            
            // Reset coordinates display
            latitudeElement.textContent = '--';
            longitudeElement.textContent = '--';
        }
        
        function formatCoordinate(coord) {
            return coord ? coord.toFixed(5) : '--';
        }
        
        // Nearby users functionality
        function startNearbyUsersUpdates() {
            // Update immediately
            updateNearbyUsers();
            
            // Then update every 5 seconds
            nearbyUsersInterval = setInterval(updateNearbyUsers, 5000);
        }
        
        async function updateNearbyUsers() {
            if (!currentUserLocation) {
                // No location available yet
                nearbyLoading.style.display = 'block';
                noUsersMessage.style.display = 'none';
                nearbyUsersList.innerHTML = '';
                return;
            }
            
            nearbyLoading.style.display = 'block';
            noUsersMessage.style.display = 'none';
            
            try {
                const currentUser = auth.currentUser;
                if (!currentUser) return;
                
                // Get all users from Firestore
                const usersSnapshot = await db.collection('users').get();
                const users = [];
                
                usersSnapshot.forEach(doc => {
                    const userData = doc.data();
                    // Skip the current user
                    if (doc.id !== currentUser.uid) {
                        users.push({
                            id: doc.id,
                            ...userData
                        });
                    }
                });
                
                // Calculate distances and filter users within 100 meters
                const nearbyUsers = users.filter(user => {
                    if (!user.location) return false;
                    
                    const distance = calculateDistance(
                        currentUserLocation.latitude,
                        currentUserLocation.longitude,
                        user.location.latitude,
                        user.location.longitude
                    );
                    
                    user.distance = distance;
                    return distance <= 100; // 100 meters
                });
                
                // Sort by distance (closest first)
                nearbyUsers.sort((a, b) => a.distance - b.distance);
                
                // Update UI
                displayNearbyUsers(nearbyUsers);
                
            } catch (error) {
                console.error('Error fetching nearby users:', error);
                nearbyUsersList.innerHTML = '';
                noUsersMessage.textContent = 'Error loading nearby users';
                noUsersMessage.style.display = 'block';
            } finally {
                nearbyLoading.style.display = 'none';
            }
        }
        
        function displayNearbyUsers(users) {
            nearbyUsersList.innerHTML = '';
            
            if (users.length === 0) {
                noUsersMessage.style.display = 'block';
                return;
            }
            
            noUsersMessage.style.display = 'none';
            
            users.forEach(user => {
                const userCard = document.createElement('div');
                userCard.className = 'user-card';
                
                // Check if this user is matched with current user
                const isMatched = currentUserMatches.has(user.id);
                if (isMatched) {
                    userCard.classList.add('matched');
                }
                
                userCard.innerHTML = `
                    ${isMatched ? '<div class="match-badge"><i class="fas fa-heart"></i></div>' : ''}
                    <img src="${user.photoURL || 'https://via.placeholder.com/150'}" alt="${user.username}" class="user-card-avatar">
                    <div class="user-card-name">${user.username}</div>
                    <div class="user-card-distance">${Math.round(user.distance)}m away</div>
                    <div class="user-card-actions">
                        <button class="btn-like ${currentUserLikes.has(user.id) ? 'liked' : ''}" data-user-id="${user.id}">
                            <i class="fas fa-heart"></i> ${currentUserLikes.has(user.id) ? 'Liked' : 'Like'}
                        </button>
                        ${isMatched ? 
                            `<button class="btn-instagram" onclick="window.open('${user.instagram}', '_blank')">
                                <i class="fab fa-instagram"></i> Insta
                            </button>` : 
                            `<button class="btn-instagram" style="visibility: hidden;" disabled>
                                <i class="fab fa-instagram"></i> Insta
                            </button>`
                        }
                    </div>
                `;
                
                // Add event listener to like button
                const likeButton = userCard.querySelector('.btn-like');
                likeButton.addEventListener('click', () => handleLike(user.id, likeButton));
                
                nearbyUsersList.appendChild(userCard);
            });
        }
        
        // Like functionality
        async function handleLike(likedUserId, button) {
            const currentUser = auth.currentUser;
            if (!currentUser) return;
            
            try {
                // Add like to Firestore
                await db.collection('likes').add({
                    likerId: currentUser.uid,
                    likedId: likedUserId,
                    timestamp: firebase.firestore.FieldValue.serverTimestamp()
                });
                
                // Update UI
                button.classList.add('liked');
                button.innerHTML = '<i class="fas fa-heart"></i> Liked';
                
                // Add to current user's likes
                currentUserLikes.add(likedUserId);
                
                // Check for match
                await checkForMatch(likedUserId);
                
            } catch (error) {
                console.error('Error adding like:', error);
            }
        }
        
        // Match checking functionality
        function startMatchChecking() {
            // Check immediately
            checkCurrentUserLikes();
            
            // Then check every 3 seconds
            likesInterval = setInterval(checkCurrentUserLikes, 3000);
        }
        
        async function checkCurrentUserLikes() {
            const currentUser = auth.currentUser;
            if (!currentUser) return;
            
            try {
                // Get all likes where current user is the liker
                const likesSnapshot = await db.collection('likes')
                    .where('likerId', '==', currentUser.uid)
                    .get();
                
                // Update current user's likes
                currentUserLikes.clear();
                likesSnapshot.forEach(doc => {
                    currentUserLikes.add(doc.data().likedId);
                });
                
                // Get all likes where current user is the liked one
                const likedBySnapshot = await db.collection('likes')
                    .where('likedId', '==', currentUser.uid)
                    .get();
                
                // Check for mutual likes (matches)
                const newMatches = new Set();
                likedBySnapshot.forEach(doc => {
                    const like = doc.data();
                    if (currentUserLikes.has(like.likerId)) {
                        newMatches.add(like.likerId);
                    }
                });
                
                // Check if we have new matches
                const previousMatches = new Set(currentUserMatches);
                currentUserMatches = newMatches;
                
                // Show popup for new matches
                if (newMatches.size > previousMatches.size && !hasShownMatchPopup) {
                    showMatchPopup();
                    hasShownMatchPopup = true;
                }
                
                // Update UI if we have nearby users displayed
                if (nearbyUsersList.children.length > 0) {
                    updateNearbyUsers();
                }
                
            } catch (error) {
                console.error('Error checking likes:', error);
            }
        }
        
        async function checkForMatch(likedUserId) {
            const currentUser = auth.currentUser;
            if (!currentUser) return;
            
            try {
                // Check if the liked user has also liked the current user
                const matchSnapshot = await db.collection('likes')
                    .where('likerId', '==', likedUserId)
                    .where('likedId', '==', currentUser.uid)
                    .get();
                
                if (!matchSnapshot.empty) {
                    // It's a match!
                    currentUserMatches.add(likedUserId);
                    showMatchPopup();
                    
                    // Update UI
                    updateNearbyUsers();
                }
            } catch (error) {
                console.error('Error checking for match:', error);
            }
        }
        
        function showMatchPopup() {
            matchPopup.classList.add('active');
            
            // Auto-close after 5 seconds
            setTimeout(() => {
                matchPopup.classList.remove('active');
            }, 5000);
        }
        
        // Haversine formula to calculate distance between two coordinates
        function calculateDistance(lat1, lon1, lat2, lon2) {
            const R = 6371e3; // Earth's radius in meters
            const Ï†1 = lat1 * Math.PI / 180;
            const Ï†2 = lat2 * Math.PI / 180;
            const Î”Ï† = (lat2 - lat1) * Math.PI / 180;
            const Î”Î» = (lon2 - lon1) * Math.PI / 180;
            
            const a = Math.sin(Î”Ï†/2) * Math.sin(Î”Ï†/2) +
                      Math.cos(Ï†1) * Math.cos(Ï†2) *
                      Math.sin(Î”Î»/2) * Math.sin(Î”Î»/2);
            const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
            
            return R * c; // Distance in meters
        }
        
        // Helper function to show messages
        function showMessage(element, text, type) {
            element.textContent = text;
            element.className = message ${type};
            element.style.display = 'block';
            
            // Auto-hide success messages after 3 seconds
            if (type === 'success') {
                setTimeout(() => {
                    element.style.display = 'none';
                }, 3000);
            }
        }
    </script>
</body>
</html>
